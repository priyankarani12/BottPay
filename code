#include<Servo.h>
#include<LiquidCrystal.h>
Servo myservo;
LiquidCrystal lcd(2,3,4,5,6,7);
int i=0;
int sen1;
int sen2;
int S_pos=90;//87
int E_pos=45;//58
int pos=S_pos;

void setup()
{
  lcd.begin(16,2);
  pinMode(8,INPUT);
  pinMode(9,INPUT);
  myservo.attach(10);
  lcd.clear();
  lcd.setCursor(5,0);
  lcd.print("PROJECT");
   lcd.setCursor(5,1);
  lcd.print("BOTTPAY");
delay(2000);
 lcd.clear();
  lcd.setCursor(5,0);
  lcd.print("  IET");
   lcd.setCursor(5,1);
  lcd.print("LUCKNOW");
delay(1000);
Serial.begin(9600);
}
void loop()
{
  int a=0;
  myservo.write(pos);
  //int sen1= Serial.parseInt();
  sen1=digitalRead(8);
  //Serial.println(sen1);
  sen2=digitalRead(9);
//Serial.println(sen1);



  if(sen1==1 && sen2==1)
  {
    lcd.clear();
    lcd.setCursor(0,0);
    lcd.print("   COLLECT YOUR");
    lcd.setCursor(0,1);
    lcd.print("      COIN");
    delay(1000);
    for(pos=S_pos;pos>=E_pos;pos-=1)
    {
    myservo.write(pos);
    delay(5);
    }
        
    
     for(pos=E_pos;pos<=S_pos;pos+=1)
    {
    myservo.write(pos);
    delay(1);
    }
      lcd.clear();
    lcd.setCursor(0,0);
    lcd.print("    THANK YOU");
    delay(1000);
  }
    else
    {
      lcd.clear();
      lcd.setCursor(0,0);
      lcd.print("  PLEASE THROW");
      lcd.setCursor(0,1);
      lcd.print("   THE BOTTLE ");
       delay(500);
    }
  }
      
    
  
